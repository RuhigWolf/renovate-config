{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "description": "My shareable config for @renovateapp",
    "labels": [
        "renovate/{{depName}}"
    ],
    "extends": [
        "config:base",
        ":automergeBranch",
        ":automergeDigest",
        ":disableRateLimiting",
        ":rebaseStalePrs",
        ":semanticCommits",
        ":timezone(America/New_York)",
        "docker:enableMajor",
        "docker:pinDigests",
        "group:linters",
        "group:allNonMajor",
        "helpers:pinGitHubActionDigests",
        "github>caycehouse/renovate-config:labels.json5"
    ],
    "platformAutomerge": true,
    "packageRules": [
        {
            "matchManagers": [
                "github-actions"
            ],
            "groupName": "GitHub Actions",
            "automerge": true
        }
    ]
}
